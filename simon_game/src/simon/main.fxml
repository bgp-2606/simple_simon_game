            <Insets left="280.0" right="50.0" top="10.0" />
         </VBox.margin>
         <font>
            <Font name="Stark" size="43.0" />
         </font>
         <effect>
            <Lighting>
               <bumpInput>
                  <Shadow />
               </bumpInput>
               <light>
                  <Light.Distant />
               </light>
            </Lighting>
         </effect>
      </Button>
