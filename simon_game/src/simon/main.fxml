                  <Shadow />
               </bumpInput>
               <light>
                  <Light.Distant />
               </light>
            </Lighting>
         </effect>
      </AnchorPane>
      <Button fx:id="btnStart" maxHeight="80.0" maxWidth="200.0" minHeight="80.0" minWidth="200.0" mnemonicParsing="false" onAction="#hideWindow" prefHeight="80.0" prefWidth="200.0" text="START">
